@using System.Web.ModelBinding
@model MusStore.Models.CompanyTopic

@{
    ViewBag.Title = "CompanyEntry";
}

<h2></h2>


<form id="companyEntry"method="post" action="/Home/CompanyEntry" enctype="multipart/form-data">

    <fieldset>
        <legend class="editor-label">Please Enter Your Company's Product Details Briefly</legend>
          <div class="editor-label">
           Company Name
        </div>
         <div class="editor-field">
@*             @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)*@
           
            <input class="validate[required]" type="text" data-errormessage-value-missing="You need to enter the full name of your company" name="CompanyName"/>
        </div>
        
        <div class="editor-label">
            Title
        </div>

        <div class="editor-field">
@*             @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)*@
           
            <input class="validate[required]" type="text" data-errormessage-value-missing="You need to specify a title" name="Title"/>
        </div>

        <div class="editor-label">
           Brief description of the company,products...
        </div>
       
        <div class="editor-field-body">
         @*     @Html.EditorFor(model => model.Body,new { @class="text-body-field" })
            @Html.ValidationMessageFor(model => model.Body)*@
            <textarea class="text-body-field" name="Body"></textarea>
        </div>
        <div class="editor-label">
            Upload Image
        </div>
        <input class="validate[optional,custom[validateMIME[image/jpeg|image/png]]]]" type="file" name="file" id="file" /><br><br>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>

</form> 


    