@model MusStore.Data.Topic

@{
    ViewBag.Title = "CompanyEntry";
}

<h2></h2>


<form method="post" action="/Home/CompanyEntry" enctype="multipart/form-data">

    <fieldset>
        <legend>Please Enter Your Company's Product Details Briefly</legend>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
        </div>
        
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Body, new { width="250px", height="300px", maxlenght=2000,multiline=true})
            @Html.ValidationMessageFor(model => model.Body)
        </div>
        <label for="file">Upload Image:</label>
        <input type="file" name="file" id="file" /><br><br>

        <p>
            <input type="submit" value="Submit" />
        </p>
    </fieldset>

</form> 
}

    